<%- include('../partials/header') %>

    <body class="p-4 md:p-10">

        <%- include('../partials/app-header') %>

            
                <div class="mx-auto mt-6  h-full space-y-8">
                    <div class="mx-auto ">

                        <!-- 1. Profile Input Screen -->
                        <div id="screen-profile" class="wireframe-card">
                            <h2 class="text-xl font-bold mb-4">Profile Input</h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">


                                <form method="POST" action="/pages/profile" enctype="multipart/form-data">
                                    <!-- Profile picture -->
                                    <div>
                                        <label for="avatar">Upload Profile Picture:</label>
                                        <input type="file" name="avatarUrl" accept="image/*">
                                    </div>

                                    <div>
                                        <label class="font-semibold text-gray-600">Name</label>
                                        <input type="text" placeholder="e.g., Priya Sharma" name="name" required="true"
                                            class="wireframe-input mt-1">
                                    </div>
                                    <div>
                                        <label class="font-semibold text-gray-600">Education</label>
                                        <input type="text" placeholder="e.g., B.Tech in CSE" name="education" required="true"
                                            class="wireframe-input mt-1">
                                    </div>
                                    <div>
                                        <label class="font-semibold text-gray-600">Skills</label>
                                        <input type="text" placeholder="e.g., Python, SQL, React" name="skills" required="true"
                                            class="wireframe-input mt-1">
                                    </div>
                                    <div>
                                        <label class="font-semibold text-gray-600">Interests</label>
                                        <input type="text" placeholder="e.g., Machine Learning, UI/UX" name="interests" required="true"
                                            class="wireframe-input mt-1">
                                    </div>
                                    <div>
                                        <label class="font-semibold text-gray-600">Location</label>
                                        <input type="text" placeholder="e.g., Bangalore, India" name="location" required="true"
                                            class="wireframe-input mt-1">
                                    </div>
                                    <div>
                                        <label class="font-semibold text-gray-600">Email</label>
                                        <input type="email" placeholder="e.g., xyz234@gmail.com" name="email" required="true"
                                            class="wireframe-input mt-1">
                                    </div>
                                    <div>
                                        <label class="font-semibold text-gray-600">Password</label>
                                        <input type="password"  name="password" required="true"
                                            class="wireframe-input mt-1">
                                    </div>

                            </div>
                            <div class="mt-6 flex flex-col sm:flex-row gap-4">
                                <button
                                    class="wireframe-secondary-btn w-full sm:w-auto flex items-center justify-center gap-2">
                                    <i data-lucide="upload"></i> Upload Resume
                                </button>
                                

                                <button class="wireframe-cta w-full sm:w-auto flex-grow" type="submit"> Go to Dashboard
                                </button>
                            </div>
                            </form>
                        </div>
                        <p class="font-bold text-black-600 hover:text-black-800"> <%= error %></p>

                    </div>
                    <%- include('../partials/chatbot') %>
                        <%- include('../partials/footer') %>
                </div>