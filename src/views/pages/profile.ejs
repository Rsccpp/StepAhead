<%- include('../partials/header') %>

<body class="p-4 md:p-20">

    <div class="mx-auto">
        <%- include('../partials/app-header') %>

        <div class="mx-auto">
            <%- include('../partials/navigation') %>

            <!-- 1. Profile Input Screen -->
            <div id="screen-profile" class="wireframe-card">
                 <h2 class="text-xl font-bold mb-4">Profile Input</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="font-semibold text-gray-600">Name</label>
                        <input type="text" placeholder="e.g., Priya Sharma" class="wireframe-input mt-1">
                    </div>
                    <div>
                        <label class="font-semibold text-gray-600">Education</label>
                        <input type="text" placeholder="e.g., B.Tech in CSE" class="wireframe-input mt-1">
                    </div>
                    <div>
                        <label class="font-semibold text-gray-600">Skills</label>
                        <input type="text" placeholder="e.g., Python, SQL, React" class="wireframe-input mt-1">
                    </div>
                     <div>
                        <label class="font-semibold text-gray-600">Interests</label>
                        <input type="text" placeholder="e.g., Machine Learning, UI/UX" class="wireframe-input mt-1">
                    </div>
                    <div>
                        <label class="font-semibold text-gray-600">Location</label>
                        <input type="text" placeholder="e.g., Bangalore, India" class="wireframe-input mt-1">
                    </div>
                 
                </div>
                <div class="mt-6 flex flex-col sm:flex-row gap-4">
                    <button class="wireframe-secondary-btn w-full sm:w-auto flex items-center justify-center gap-2">
                        <i data-lucide="upload"></i> Upload Resume
                    </button>
                    <!-- This button would eventually link to the recommendations page -->
                    <a href="/recommendations" class="wireframe-cta w-full sm:w-auto flex-grow">Get My Career Roadmap</a>
                </div>
            </div>
        </div>
    </div>

<%- include('../partials/footer') %>